-- iterative pow
fn ipow(base: u64, exp: u16) -> u64:
  r: u64 = 1

  for .., exp > 0, exp -= 1:
    r *= base

  return r

-- recursive pow
fn rpow(base: u64, exp: u16) -> u64:
  return 1 if exp == 0 else base * rpow(base, exp - 1)

test 'iterative pow + recursive pow':
  return expect!(ipow(10, 2) + rpow(10, 3) == 1100)

